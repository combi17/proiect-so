#!/bin/bash

echo -e "Bine ai venit! Alege o optiune:\n"
echo -e "1. Conecteaza-te\n2. Inregistreaza-te\n3. Genereaza un raport\n4. Iesire\n"
read -p "Optiune: " opt

if [ "$opt" == "1" ]; then
   source login.bsh
fi
if [ "$opt" == "2" ]; then
   source signup.bsh
fi
if [ "$opt" == "3" ]; then
   source raport.bsh
fi
if [ "$opt" == "4" ]; then
   echo "Programul se va inchide. La revedere!"
fi


