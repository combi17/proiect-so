#!/bin/bash

logged_in_users=()

echo -e "Bine ai venit! Alege unul dintre cele trei numere:\n"
echo -e "1. Conecteazate\n2. Inregistreazate\n3. Genereaza un raport\n4. Iesire\n"
read -p "Optiune: " opt

if [ "$opt" == "1" ]; then
   source login.bsh
fi
if [ "$opt" == "2" ]; then
   source signup.bsh
fi
if [ "$opt" == "3" ]; then
   source raport.bsh
fi
if [ "$opt" == "4" ]; then
   echo "Programul se va inchide. La revedere!"
fi


